<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.MyFragment"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <!--用户信息-->
    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dimgray">
        <!--用户头像-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_head_portrait"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/point_img_test"
            android:layout_margin="20dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/white"/>
        <!--用户名-->
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/user_head_portrait"
            android:layout_centerVertical="true"
            android:textStyle="bold"/>
        <!--个人主页-->
        <TextView
            android:id="@+id/user_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人主页 >"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <!--四个选项-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="15dp">
        <!--我的发布-->
        <RelativeLayout
            android:id="@+id/my_publish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/my_publish_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的发布"
                android:layout_below="@id/my_publish_num"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="12sp"/>
        </RelativeLayout>
        <!--分割线1-->
        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:background="@color/dimgray"
            android:layout_gravity="bottom" />
        <!--关注-->
        <RelativeLayout
            android:id="@+id/my_follow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/my_follow_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:layout_below="@id/my_follow_num"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="12sp"/>
        </RelativeLayout>
        <!--分割线2-->
        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:background="@color/dimgray"
            android:layout_gravity="bottom" />
        <!--收藏-->
        <RelativeLayout
            android:id="@+id/my_collection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/my_collection_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:layout_below="@id/my_collection_num"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="12sp"/>
        </RelativeLayout>
        <!--分割线3-->
        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:background="@color/dimgray"
            android:layout_gravity="bottom" />
        <!--最近浏览-->
        <RelativeLayout
            android:id="@+id/my_recent_read"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/my_recent_read_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最近浏览"
                android:layout_below="@id/my_recent_read_num"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="12sp"/>
        </RelativeLayout>
    </LinearLayout>

    <!--五个选项-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:background="@color/white">
        <!--实名认证-->
        <RelativeLayout
            android:id="@+id/certification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/bg_option">
            <ImageView
                android:id="@+id/certification_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_certification"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实名认证"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_toRightOf="@id/certification_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_right"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.02dp"
            android:background="@color/dimgray"
            android:layout_marginLeft="65dp"/>
        <!--积分-->
        <RelativeLayout
            android:id="@+id/integral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/bg_option">
            <ImageView
                android:id="@+id/integral_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_integral"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_toRightOf="@id/integral_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_right"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.02dp"
            android:background="@color/dimgray"
            android:layout_marginLeft="65dp"/>
        <!--推荐给好友-->
        <RelativeLayout
            android:id="@+id/recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/bg_option">
            <ImageView
                android:id="@+id/recommend_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_recommend"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐给好友"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_toRightOf="@id/recommend_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_right"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.02dp"
            android:background="@color/dimgray"
            android:layout_marginLeft="65dp"/>
        <!--帮助中心-->
        <RelativeLayout
            android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/bg_option">
            <ImageView
                android:id="@+id/help_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_help"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帮助中心"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_toRightOf="@id/help_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_right"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.02dp"
            android:background="@color/dimgray"
            android:layout_marginLeft="65dp"/>
        <!--设置-->
        <RelativeLayout
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/bg_option">
            <ImageView
                android:id="@+id/setting_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_setting"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_toRightOf="@id/setting_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_right"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>