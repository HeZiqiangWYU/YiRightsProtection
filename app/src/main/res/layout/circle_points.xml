                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_below="@id/point8_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>