<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <!--第一行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--1-->
        <RelativeLayout
            android:id="@+id/point1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/point1_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/point_img_test"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/point1_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="普法学堂"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_below="@id/point1_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>

        <!--2-->
        <RelativeLayout
            android:id="@+id/point2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/point2_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/point_img_test"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/point2_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="案例分析"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_below="@id/point2_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>

        <!--3-->
        <RelativeLayout
            android:id="@+id/point3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/point3_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/point_img_test"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/point3_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常见问题"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_below="@id/point3_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>

        <!--4-->
        <RelativeLayout
            android:id="@+id/point4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/point4_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/point_img_test"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/point4_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="竞法游戏"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_below="@id/point4_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>
    </LinearLayout>

    <!--第二行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">
        <!--5-->
        <RelativeLayout
            android:id="@+id/point5"
            android:layout_width="0dp"
